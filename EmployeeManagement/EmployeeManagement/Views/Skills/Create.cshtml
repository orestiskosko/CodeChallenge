@model Skill
@{
    ViewData["Title"] = "New Skill";
}

<section class="section">
    <div class="container">

        <p class="title">Create Skill</p>

        <div class="columns">
            <div class="column is-half-desktop">
                <form method="post">

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label" asp-for="Name"></label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input" asp-for="Name" />
                                </div>
                                <span asp-validation-for="Name" class="help is-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label" asp-for="Description"></label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <input class="input" asp-for="Description" />
                                <span asp-validation-for="Description" class="help is-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label"></div>
                        <div class="field-body">
                            <div class="buttons">
                                <a class="button is-info" asp-action="Index">Back</a>
                                <button type="submit" class="button is-primary" asp-action="Create">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>




